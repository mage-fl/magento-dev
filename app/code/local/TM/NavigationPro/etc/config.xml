<?xml version="1.0" encoding="utf-8"?>
<config>
    <modules>
        <TM_NavigationPro>
            <version>1.3.2.1</version>
        </TM_NavigationPro>
    </modules>
    <global>
        <models>
            <navigationpro>
                <class>TM_NavigationPro_Model</class>
                <resourceModel>navigationpro_resource</resourceModel>
            </navigationpro>
            <navigationpro_resource>
                <class>TM_NavigationPro_Model_Resource</class>
                <entities>
                    <menu>
                        <table>tm_navigationpro_menu</table>
                    </menu>
                    <menu_content>
                        <table>tm_navigationpro_menu_content</table>
                    </menu_content>
                    <column>
                        <table>tm_navigationpro_column</table>
                    </column>
                    <column_content>
                        <table>tm_navigationpro_column_content</table>
                    </column_content>
                    <sibling>
                        <table>tm_navigationpro_sibling</table>
                    </sibling>
                    <sibling_content>
                        <table>tm_navigationpro_sibling_content</table>
                    </sibling_content>
                </entities>
            </navigationpro_resource>
        </models>
        <blocks>
            <navigationpro>
                <class>TM_NavigationPro_Block</class>
            </navigationpro>
        </blocks>
        <helpers>
            <navigationpro>
                <class>TM_NavigationPro_Helper</class>
            </navigationpro>
        </helpers>
        <resources>
            <tm_navigationpro_setup>
                <setup>
                    <module>TM_NavigationPro</module>
                </setup>
            </tm_navigationpro_setup>
        </resources>
    </global>

    <adminhtml>
        <layout>
            <updates>
                <navigationpro>
                    <file>tm/navigationpro.xml</file>
                </navigationpro>
            </updates>
        </layout>
        <translate>
            <modules>
                <TM_NavigationPro>
                    <files>
                        <default>TM_NavigationPro.csv</default>
                    </files>
                </TM_NavigationPro>
            </modules>
        </translate>
    </adminhtml>

    <admin>
        <routers>
             <adminhtml>
                 <args>
                     <modules>
                         <navigationpro before="Mage_Adminhtml">TM_NavigationPro_Adminhtml</navigationpro>
                     </modules>
                 </args>
             </adminhtml>
        </routers>
    </admin>

    <frontend>
        <layout>
             <updates>
                  <navigationpro>
                        <file>tm/navigationpro.xml</file>
                  </navigationpro>
             </updates>
        </layout>
        <translate>
            <modules>
                <TM_NavigationPro>
                    <files>
                        <default>TM_NavigationPro.csv</default>
                    </files>
                </TM_NavigationPro>
            </modules>
        </translate>
    </frontend>

    <default>
        <navigationpro>
            <top>
                <enabled>0</enabled>
                <menu_name>top</menu_name>
                <dropdown_side>right</dropdown_side>
            </top>
            <left>
                <enabled>0</enabled>
                <menu_name>left</menu_name>
                <dropdown_side>right</dropdown_side>
            </left>
            <right>
                <enabled>0</enabled>
                <menu_name>right</menu_name>
                <dropdown_side>left</dropdown_side>
            </right>
        </navigationpro>
    </default>
</config>
